.recommendSongContainer .header {
  width: 100%;
  height: 300rpx;
  position: relative;
}
.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}
.recommendSongContainer .header .date {
  position: absolute;
  width: 300rpx;
  height: 100rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  left: 50%;
  top: 50%;
  margin-left: -150rpx;
  margin-top: -50rpx;
}
.recommendSongContainer .header .date .day {
  font-size: 38rpx;
}
.recommendSongContainer .listContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background-color: #fff;
}
.recommendSongContainer .listContainer .listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.recommendSongContainer .listContainer .listHeader .changeMore {
  float: right;
}
.recommendSongContainer .listContainer .listScroll {
  height: calc(100vh - 380rpx);
}
.recommendSongContainer .listContainer .listScroll .scrollItem {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}
.recommendSongContainer .listContainer .listScroll .scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.recommendSongContainer .listContainer .listScroll .scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.recommendSongContainer .listContainer .listScroll .scrollItem .musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.recommendSongContainer .listContainer .listScroll .scrollItem .iconfont {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  right: 0;
  text-align: right;
}
