.indexContainer .bannerContainer .banners {
  width: 100%;
  height: 300rpx;
}
.indexContainer .bannerContainer .banners image {
  width: 100%;
  height: 100%;
}
.indexContainer .navContainer {
  display: flex;
}
.indexContainer .navContainer .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.indexContainer .navContainer .navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: #f01313;
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.indexContainer .navContainer .navItem text {
  font-size: 26rpx;
}
.indexContainer .recommendContainer {
  padding: 20rpx;
}
.indexContainer .recommendContainer .recommendScroll {
  margin-top: 20rpx;
  display: flex;
  height: 300rpx;
}
.indexContainer .recommendContainer .recommendScroll .scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.indexContainer .recommendContainer .recommendScroll .scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.indexContainer .recommendContainer .recommendScroll .scrollItem text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.indexContainer .topList {
  padding: 20rpx;
}
.indexContainer .topList .topListSwiper {
  height: 400rpx;
}
.indexContainer .topList .topListSwiper swiper-item .swiperItem {
  width: 96%;
}
.indexContainer .topList .topListSwiper swiper-item .swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.indexContainer .topList .topListSwiper swiper-item .swiperItem .musicItem {
  display: flex;
  margin-bottom: 20rpx;
}
.indexContainer .topList .topListSwiper swiper-item .swiperItem .musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.indexContainer .topList .topListSwiper swiper-item .swiperItem .musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.indexContainer .topList .topListSwiper swiper-item .swiperItem .musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
