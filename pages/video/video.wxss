.videoContainer .header {
  display: flex;
  padding: 10rpx;
}
.videoContainer .header .search {
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  border: 1rpx solid #eee;
  color: #d43c33;
  line-height: 60rpx;
}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .navScroll {
  display: flex;
  white-space: nowrap;
  height: 62rpx;
}
.videoContainer .navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.videoContainer .navScroll .navItem .active {
  border-bottom: 1rpx solid #d43c33;
}
.videoContainer .videoScroll {
  margin-top: 10rpx;
}
.videoContainer .videoScroll .videoItem {
  padding: 0 3%;
}
.videoContainer .videoScroll .videoItem .common {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}
.videoContainer .videoScroll .videoItem .footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.videoContainer .videoScroll .videoItem .footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.videoContainer .videoScroll .videoItem .footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.videoContainer .videoScroll .videoItem .footer .comments_praised {
  float: right;
}
.videoContainer .videoScroll .videoItem .footer .comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}
.videoContainer .videoScroll .videoItem .footer .comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
.videoContainer .videoScroll .videoItem .footer .comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}
.videoContainer .videoScroll .videoItem .footer .comments_praised .btn:after {
  border: none;
}
