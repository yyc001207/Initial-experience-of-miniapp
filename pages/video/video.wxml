<view class="videoContainer">
  <!-- 头部区域 -->
  <view class="header">
    <image src="/static/images/video/video.jpg"></image>
    <view class="search">搜索</view>
    <image src="/static/images/logo.png"></image>
  </view>
  <!-- 导航栏 -->
  <scroll-view
    scroll-x
    class="navScroll"
    enable-flex
    scroll-into-view="{{'a'+navId}}"
    scroll-with-animation
  >
    <view class="navItem" wx:for="{{videoGroupList}}" wx:key="id" id="{{'a'+item.id}}">
      <view
        class="navContent {{navId==item.id?'active':''}}"
        bind:tap="changeNav"
        id="{{item.id}}"
      >{{item.name}}</view>
    </view>
  </scroll-view>
  <!-- 回到顶部 -->
  <image src="/static/images/logo.png" bindtap="toTop" class="toTop" wx:if="{{toTop}}" />
  <!-- 视频列表 -->
  <scroll-view
    scroll-y
    class="videoScroll"
    bindrefresherrefresh="handleRefresher"
    refresher-enabled
    refresher-triggered="{{isTriggered}}"
    bindscrolltolower="handleToLower"
    scroll-top="{{topNum}}"
    bindscroll="handleToTop"
  >
    <view class="videoItem" wx:for="{{videoList}}" wx:key="id">
      <!--  -->
      <video
        wx:if="{{videoId === item.data.vid}}"
        bindloadedmetadata="handlePlay"
        autoplay
        bindtimeupdate="handleTimeUpdate"
        bindended="handleEnded"
        object-fit="fill"
        src="{{item.data.urlInfo.url}}"
        class="common"
        id="{{item.data.vid}}"
        poster="{{item.data.coverUrl}}"
      />
      <!-- 性能优化，使用image标签代替video -->
      <image
        wx:else
        src="{{item.data.coverUrl}}"
        class="common"
        bindtap="handleChangeVid"
        id="{{item.data.vid}}"
      />
      <view class="footer">
        <image class="avatar" src="{{item.data.creator.avatarUrl}}"></image>
        <text class="nickName">{{item.data.creator.nickname}}</text>
        <view class="comments_praised">
          <text class="item">
            <text class="iconfont icon-dianzan1"></text>
            <text class="count">{{item.data.praisedCount}}</text>
          </text>
          <text class="item">
            <text class="iconfont icon-pinglun"></text>
            <text class="count">{{item.data.commentCount}}</text>
          </text>
          <button open-type="share" class="item btn">
            <text class="iconfont icon-gengduo-shuxiang"></text>
          </button>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
