.searchContainer {
  padding: 0 20rpx;
}
.searchContainer .header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.searchContainer .header .searchInput {
  position: relative;
  flex: 1;
  background-color: rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
  border: 1px solid red;
}
.searchContainer .header .searchInput .searchIcon {
  position: absolute;
  left: 15rpx;
}
.searchContainer .header .searchInput input {
  margin-left: 50rpx;
  height: 100%;
  font-size: 28rpx;
}
.searchContainer .header .searchInput .clear {
  position: absolute;
  right: 30rpx;
  top: 0;
  font-size: 30rpx;
  z-index: 99;
}
.searchContainer .header .searchInput .input-placeholder {
  font-size: 28rpx;
}
.searchContainer .header .cancel {
  width: 100rpx;
  text-align: center;
}
.searchContainer .hotContainer .title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.searchContainer .hotContainer .hotList {
  display: flex;
  flex-wrap: wrap;
}
.searchContainer .hotContainer .hotList .hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.searchContainer .hotContainer .hotList .hotItem .order {
  margin: 0 10rpx;
}
.searchContainer .hotContainer .hotList .hotItem .iconImage {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.searchContainer .showSearchContent .searchContent {
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchContainer .showSearchContent .searchList .searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchContainer .showSearchContent .searchList .searchItem .content {
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.searchContainer .history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.searchContainer .history .title {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}
.searchContainer .history .historyItem {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  background-color: #ededed;
  margin: 0 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
  max-width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.searchContainer .history .delete {
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
  font-size: 36rpx;
}
